{
	"name": "obsidian-colored-tags-plugin",
	"version": "5.1.1",
	"description": "Colorizes tags in different colors. Colors of nested tags are mixed with the root tag to improve readability. Text color contrast is automatically matched to comply with AA level of WCAG 2.1.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "npm run typecheck && node esbuild.config.mjs production",
		"typecheck": "tsc --noEmit",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"format": "prettier 'src/**/*' 'tests/**/*' --write",
		"test": "cross-env VITE_CJS_IGNORE_WARNING=1 vitest run",
		"test:run": "cross-env VITE_CJS_IGNORE_WARNING=1 vitest run",
		"test:watch": "cross-env VITE_CJS_IGNORE_WARNING=1 vitest --watch",
		"test:coverage": "cross-env VITE_CJS_IGNORE_WARNING=1 vitest run --coverage && node ./scripts/check-coverage.js",
		"lint": "eslint src --max-warnings=0",
		"check": "npm run lint && npm run typecheck && npm run test:coverage"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"colored",
		"tags"
	],
	"author": "Pavel Frankov",
	"license": "MIT",
	"devDependencies": {
		"@codemirror/state": "^6.0.0",
		"@codemirror/view": "^6.0.0",
		"@types/node": "^20.10.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"@vitest/coverage-v8": "^1.6.1",
		"builtin-modules": "3.3.0",
		"cross-env": "^10.1.0",
		"esbuild": "0.17.3",
		"eslint": "^8.57.0",
		"eslint-plugin-sonarjs": "^0.23.0",
		"jsdom": "^22.1.0",
		"obsidian": "latest",
		"prettier": "3.1.1",
		"rollup": "^3.5.0",
		"tslib": "2.4.0",
		"typescript": "^5.6.1",
		"vitest": "^1.5.7"
	},
	"dependencies": {
		"colorjs.io": "^0.4.5"
	}
}
